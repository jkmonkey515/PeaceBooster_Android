<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alek.peacebooster.fragment.summary.SummaryFinalFragment">

    <ImageView
        android:id="@+id/imvQuestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|bottom">

                <TextView
                    android:id="@+id/txvSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@color/black_transparent"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:text="Correct. You now understand the truth of this conclusion and realize that ending all conflicts/wars you or anybody else may be involved in is in everyone's own best interest."
                    android:fontFamily="@font/gotham_regular"/>

                <LinearLayout
                    android:id="@+id/lyOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLinkStep1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:background="@color/black_transparent"
                        android:textSize="20sp"
                        android:text="@string/link_step1"
                        android:fontFamily="@font/gotham_regular"/>

                    <TextView
                        android:id="@+id/tvLinkStep2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:background="@color/black_transparent"
                        android:textSize="20sp"
                        android:text="@string/link_step2"
                        android:fontFamily="@font/gotham_regular"/>

                    <TextView
                        android:id="@+id/tvLinkStep3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:background="@color/black_transparent"
                        android:textSize="20sp"
                        android:text="@string/link_step3"
                        android:fontFamily="@font/gotham_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal|bottom">

                    <Button
                        android:id="@+id/btnAnotherPicture"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:textColor="@android:color/white"
                        android:text="@string/button_another_picture"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:background="@drawable/btn_round_border"
                        android:layout_gravity="center_horizontal|bottom"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@color/black_transparent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:text="@string/share_senators"
                        android:fontFamily="@font/gotham_regular"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="20dp">

                        <Button
                            android:id="@+id/btnSmsText1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="44dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginEnd="24dp"
                            android:textColor="@android:color/white"
                            android:text="@string/button_text"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:background="@drawable/btn_round_border"
                            android:layout_gravity="center_horizontal|bottom"/>

                        <Button
                            android:id="@+id/btnTweetMsg1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="44dp"
                            android:textColor="@android:color/white"
                            android:text="@string/button_tweet"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:background="@drawable/btn_round_border"
                            android:layout_gravity="center_horizontal|bottom"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:text="@string/share_congressman"
                        android:fontFamily="@font/gotham_regular"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="20dp">

                        <Button
                            android:id="@+id/btnSmsText2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="44dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginEnd="24dp"
                            android:textColor="@android:color/white"
                            android:text="@string/button_text"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:background="@drawable/btn_round_border"
                            android:layout_gravity="center_horizontal|bottom"/>

                        <Button
                            android:id="@+id/btnTweetMsg2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="44dp"
                            android:textColor="@android:color/white"
                            android:text="@string/button_tweet"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:background="@drawable/btn_round_border"
                            android:layout_gravity="center_horizontal|bottom"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDonate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:text="@string/please_donate"
                        android:fontFamily="@font/gotham_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal|bottom">

                    <Button
                        android:id="@+id/btnNext"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:textColor="@android:color/white"
                        android:text="@string/button_donate"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:background="@drawable/btn_round_border"
                        android:layout_gravity="center_horizontal|bottom"/>
                </LinearLayout>

            </LinearLayout>
        </TableLayout>
    </ScrollView>

</FrameLayout>