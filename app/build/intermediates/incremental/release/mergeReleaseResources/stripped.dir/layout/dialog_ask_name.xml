<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_box"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/name_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/photo_name"
        android:gravity="center"
        android:background="@drawable/dialog_top"
        android:fontFamily="@font/gotham_medium"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/edtimagename"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:hint="@string/enter_photo_name"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/black_transparent"
        android:inputType="textCapSentences"
        android:fontFamily="@font/gotham_regular"
        android:textColor="@color/white"
        android:textColorHint="@color/light_gray"
        android:gravity="center|left"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/save"
        android:background="@drawable/dialog_bottom_main"
        android:textAllCaps="false"
        android:fontFamily="@font/gotham_medium"
        android:textColor="@color/white"
        android:gravity="center"/>

</LinearLayout>



