<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.alek.peacebooster.fragment.steps.Step1Fragment">

    <ImageView
        android:id="@+id/imvStep1Img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/txvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:background="@color/black_transparent"
        android:fontFamily="@font/gotham_regular"
        android:padding="10dp"
        android:text="Does name appears to have a self different from yours?Does name appears to have self (existence, being) different from yours?"
        android:textColor="@color/white"
        android:textSize="20sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal|bottom">

        <Button
            android:id="@+id/btnNo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="@android:color/white"
            android:text="@string/answerNo"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/btn_round_border"
            android:layout_gravity="center_horizontal|bottom"/>

        <Button
            android:id="@+id/btnYes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:textColor="@android:color/white"
            android:text="@string/answerYes"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/btn_round_border"
            android:layout_gravity="center_horizontal|bottom"/>
    </LinearLayout>

</FrameLayout>